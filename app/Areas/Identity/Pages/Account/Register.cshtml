@page
@model RegisterModel
@{
    ViewData["Title"] = "Registracija";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8">
        <div class="tab-content">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="tab-pane fade show active" id="registracija1" role="tabpanel" aria-labelledby="registracija1-tab">
                    <br />
                    <div class="form-group">
                        <label asp-for="Input.ImeZavoda" class="form-label">Ime zavoda</label>
                        <input asp-for="Input.ImeZavoda" class="form-control" type="text" />
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Input.Ime" class="form-label">Ime uporabnika</label>
                        <input asp-for="Input.Ime" class="form-control" type="text" />
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Input.Priimek" class="form-label">Priimek uporabnika</label>
                        <input asp-for="Input.Priimek" class="form-control" type="text" />
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Input.Password" class="form-label">Geslo</label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword" class="form-label">Ponovi geslo</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <br/>
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registracija</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
